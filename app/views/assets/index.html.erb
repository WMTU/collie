<h1>Listing assets</h1>

<table>
  <thead>
    <tr>
      <th>Asset tag</th>
      <th>Asset name</th>
      <th>Serial number</th>
      <th>Purchase date</th>
      <th>Cost</th>
      <th>Status</th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= link_to asset.asset_tag, asset_path(asset) %></td>
        <td><%= link_to asset.asset_name, asset_path(asset) %></td>
        <td><%= link_to asset.serial_number, asset_path(asset) %></td>
        <td><%= asset.purchase_date %></td>
        <td><%= asset.cost %></td>
        <td><%= asset.status %></td>
        <td><%= asset.notes %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Asset', new_asset_path %>
