<!DOCTYPE html>
<html>
<head>
  <title>Collie</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="flex nav" id="nav-bar">
      <div class="spacer"></div>
      <%= link_to 'Collie', root_path, class: 'brand' %>
      <div class="spacer"></div>
      <% if current_user %>
      <%= link_to 'Assets', assets_path %>
      <div class="spacer"></div>
      <% if can? :index, User %>
      <%= link_to 'Users', users_path %>
      <div class="spacer"></div>
      <% end %>
      <% if can? :index, Rental %>
      <%= link_to 'Rentals', rentals_path %>
      <div class="spacer"></div>
      <% end %>
      <span><%= link_to current_user.first_name, edit_user_path(current_user) %>, <%= link_to 'Logout', session_path(1), method: :delete %></span>
      <div class="spacer"></div>
      <% end %>
    </div>
  </header>
  <div id="notifications">
    <% flash.each do |name, msg| %>
      <div class="form-signin">
        <% if msg.is_a?(String) %>
          <%= content_tag :div, msg, :class => "alert alert-#{name}" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <main>
    <%= yield %>
  </main>
  <footer>

  </footer>
</body>
</html>
