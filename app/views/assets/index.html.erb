<h1>Listing Assets</h1>

<table>
  <thead>
    <tr>
      <th>Asset Tag</th>
      <th>Asset Name</th>
      <th>Serial Number</th>
      <th>Purchase Date</th>
      <th>Cost</th>
      <th>Status</th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= link_to asset.current_tag.tag_number, asset_path(asset) %></td>
        <td><%= link_to asset.asset_name, asset_path(asset) %></td>
        <td><%= link_to asset.serial_number, asset_path(asset) %></td>
        <td><%= asset.purchase_date %></td>
        <td><%= asset.cost %></td>
        <td><%= asset.status %></td>
        <td><%= asset.notes %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @assets %>
<br>
<% if can? :create, Asset %>
<%= link_to 'New Asset', new_asset_path, class: 'btn btn--s btn--gray' %>
<% end %>
